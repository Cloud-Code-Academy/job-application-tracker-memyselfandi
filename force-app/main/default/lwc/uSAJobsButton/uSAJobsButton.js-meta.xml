<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <!-- API version of the component -->
    <apiVersion>63.0</apiVersion>

    <!-- Make component available in the Lightning App Builder -->
    <isExposed>true</isExposed>

    <!-- Specify where this component can be used -->
    <targets>
        <!-- Use as a quick action on a record -->
        <target>lightning__RecordAction</target>
        <!-- Use on a Lightning record page -->
        <target>lightning__RecordPage</target>
    </targets>

    <!-- Limit component visibility to a specific object -->
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <!-- Make component available only on Job_Application__c object pages -->
                <object>Job_Application__c</object>
            </objects>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>